<!DOCTYPE html>
<html>
  <head>
    <title>EmployeeManagementSystem</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="bg-primary">
      <% if user_signed_in? %>
      <%= link_to 'Employees', employees_path, class: "btn btn-default" %>
      <%= link_to 'New Employee', new_employee_path, class: "btn btn-default" %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-default sign-out" %>
      <% end %>
    </div>
    <div class="container">
      <div class="">
        <p class="alert alert-primary"><%= alert %></p><br>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
 