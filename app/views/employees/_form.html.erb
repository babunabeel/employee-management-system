<div class="">
  <%= form_with(model: employee, local: true, class: "form form-horizontal") do |form| %>
    <div class="form-group">
      <%= form.label :firstname, required: true %>
      <%= form.text_field :firstname, required: true, class: "form-control" %>
      <% if @employee.errors[:firstname].any? %>
        <% @employee.errors[:firstname].each do |message| %>
          <div class="errors"><%= message %></div><br>
        <% end %>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :lastname %>
      <%= form.text_field :lastname, required: true, class: "form-control" %>
      <% if @employee.errors[:lastname].any? %>
        <% @employee.errors[:lastname].each do |message| %>
          <div class="errors"><%= message %></div><br>
        <% end %>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :email %>
      <%= form.text_field :email, required: true, class: "form-control" %>
      <% if @employee.errors[:email].any? %>
        <% @employee.errors[:email].each do |message| %>
          <div class="errors"><%= message %></div><br>
        <% end %>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn"%>
    </div>
  <% end %>
</div>